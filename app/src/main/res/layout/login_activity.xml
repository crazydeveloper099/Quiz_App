<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="#FFFFFF">


    <ImageView
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:src="@drawable/password_"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login !"
        android:layout_marginTop="10pt"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="#000000"
        />
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#000000"
    android:layout_marginLeft="20pt"
    android:layout_marginRight="20pt"
    android:hint="Email ID"
    android:id="@+id/email"
    android:textColorHint="#A8A8A8"
    android:layout_marginTop="15pt"
    android:inputType="textEmailAddress" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        android:hint="Password"
        android:id="@+id/password"
        android:textColorHint="#A8A8A8"
        android:layout_marginTop="10pt"
        android:inputType="textPassword" />

    <mehdi.sakout.fancybuttons.FancyButton

        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        fancy:fb_text="Login"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        fancy:fb_radius="20dp"
        fancy:fb_textColor="#000000"
        fancy:fb_borderWidth="3dp"
        fancy:fb_borderColor="#000000"
        fancy:fb_defaultColor="#FFFFFF"
        android:layout_height="20pt"
        android:layout_marginTop="20pt"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="10pt"
        android:background="#000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10pt"
            android:layout_height="wrap_content"
            android:text="Don't have an account"
            android:gravity="center"
            />

        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_marginTop="5pt"
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            fancy:fb_text="Signup"
            fancy:fb_radius="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5pt"
            android:layout_marginLeft="20pt"
            android:layout_marginRight="20pt"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_borderWidth="3dp"
            fancy:fb_borderColor="#0084ff"
            fancy:fb_defaultColor="#0084ff"
            android:layout_height="20pt"/>


    <ProgressBar
        android:layout_width="15pt"
        android:layout_height="15pt"
        android:visibility="gone"
        android:id="@+id/pg_bar"
        android:layout_marginTop="10pt"
      />



</LinearLayout>

