<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="30pt"
        android:layout_height="30pt"
        fancy:civ_border="true"
        fancy:civ_border_width="1dp"
        fancy:civ_border_color="#0084ff"
        android:src="@drawable/signup_"
        android:id="@+id/usr_image"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup!"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="#0084ff"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/upload_image"
        android:layout_marginTop="5pt"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="10pt"
            android:layout_height="10pt"
            android:src="@drawable/up_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3pt"
            android:text="Upload your image"/>
    </LinearLayout>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        android:hint="Email ID"
        android:id="@+id/email"
        android:autofillHints="no"
        android:inputType="textEmailAddress"
        android:textColorHint="#A8A8A8"
        android:layout_marginTop="10pt"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        android:hint="Password"
        android:id="@+id/password"

        android:textColorHint="#A8A8A8"
        android:layout_marginTop="10pt"
        android:autofillHints="no"
        android:inputType="textPassword" />
    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_marginTop="15pt"
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        fancy:fb_text="Signup"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        fancy:fb_radius="20dp"
        fancy:fb_textColor="#0084ff"
        fancy:fb_borderWidth="3dp"
        fancy:fb_borderColor="#0084ff"
        fancy:fb_defaultColor="#FFFFFF"
        android:layout_height="20pt"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="10pt"
        android:background="#000000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10pt"
        android:layout_height="wrap_content"
        android:text="Already have an account"
        android:gravity="center"
        />

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_marginTop="5pt"
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        fancy:fb_text="Login"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        fancy:fb_radius="20dp"
        fancy:fb_textColor="#FFFFFF"
        fancy:fb_borderWidth="3dp"
        fancy:fb_borderColor="#000000"
        fancy:fb_defaultColor="#000000"
        android:layout_height="20pt"/>


    <ProgressBar
        android:layout_width="15pt"
        android:layout_height="15pt"
        android:id="@+id/pg_bar"
        android:layout_marginTop="10pt"
        android:visibility="gone"
        />






</LinearLayout>